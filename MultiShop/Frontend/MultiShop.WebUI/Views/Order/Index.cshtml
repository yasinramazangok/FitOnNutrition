@model CreateOrderAddressDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<!-- Checkout Start -->
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">TESLİMAT VE FATURA ADRESİNİZ</span></h5>
            <div class="bg-light p-30 mb-5">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Adınız</label>
                            <input class="form-control" type="text" asp-for="Name" placeholder="adınız">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Soyadınız</label>
                            <input class="form-control" type="text" asp-for="Surname" placeholder="soyadınız">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Email Adresiniz</label>
                            <input class="form-control" type="text" asp-for="Email" placeholder="mail@email.com">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Telefon Numaranız</label>
                            <input class="form-control" type="text" asp-for="Phone" placeholder="+90 000 000 00 00">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres Detayları 1</label>
                            <input class="form-control" type="text" asp-for="Detail1" placeholder="mahalle/cadde/sokak">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres Detayları 2</label>
                            <input class="form-control" type="text" asp-for="Detail2" placeholder="bina no/kat/daire no">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Ülke</label>
                            <input class="form-control" type="text" asp-for="Country" placeholder="Türkiye">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Şehir</label>
                            <input class="form-control" type="text" asp-for="City" placeholder="şehir">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>İlçe</label>
                            <input class="form-control" type="text" asp-for="District" placeholder="ilçe">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Posta Kodu</label>
                            <input class="form-control" type="text" asp-for="ZipCode" placeholder="posta kodu">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">SİPARİŞ ÖZETİ</span></h5>

            @await Component.InvokeAsync("OrderSummaryViewComponentPartial")

            @await Component.InvokeAsync("OrderPaymentViewComponentPartial")

        </div>
    </div>
</div>
<!-- Checkout End -->
