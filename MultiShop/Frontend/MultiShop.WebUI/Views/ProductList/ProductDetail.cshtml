@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="container-fluid pb-5">
    <div class="row px-xl-5">

        @await Component.InvokeAsync("ProductDetailImageSliderViewComponentPartial", new { id = ViewBag.j })

        @await Component.InvokeAsync("ProductDetailViewComponentPartial", new { id = ViewBag.j })

    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Açıklama</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Bilgiler</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Yorumlar (0)</a>
                </div>
                <div class="tab-content">

                    @await Component.InvokeAsync("ProductDetailDescriptionViewComponentPartial", new { id = ViewBag.j })

                    @await Component.InvokeAsync("ProductDetailInformationViewComponentPartial", new { id = ViewBag.j })

                    @await Component.InvokeAsync("ProductDetailReviewViewComponentPartial", new { id = ViewBag.j })

                </div>
            </div>
        </div>
    </div>
</div>

