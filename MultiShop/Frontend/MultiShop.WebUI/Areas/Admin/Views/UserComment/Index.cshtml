@model List<ResultUserCommentDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Id</th>
                                <th>Kullanıcı</th>
                                <th>Yorum</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.ProductId</td>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Text</td>
                                    <td>@item.CreatedDate.ToShortDateString()</td>
                                    <td>@item.IsApproved</td>
                                    <td><a href="@Url.Action("DeleteUserComment", "UserComment", new { area = "Admin", id = item.UserCommentId })" class="btn btn-danger">Sil</a></td>
                                    <td><a href="@Url.Action("UpdateUserComment", "UserComment", new { area = "Admin", id = item.UserCommentId })" class="btn btn-warning">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>