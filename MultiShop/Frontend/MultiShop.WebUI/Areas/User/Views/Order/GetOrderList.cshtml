@model List<ResultOrdersByUserIdDto>

@{
    ViewData["Title"] = "GetOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
    // string tableRowColor = "";
}

<style>
    .table-striped tbody tr:nth-child(1) {
        background-color: #d1ecf1;
    }

    .table-striped tbody tr:nth-child(2) {
        background-color: #fff3cd;
    }

    .table-striped tbody tr:nth-child(3) {
        background-color: #f5c6cb;
    }

    .table-striped tbody tr:nth-child(4) {
        background-color: #c3e6cb;
    }

    .table-striped tbody tr:nth-child(5) {
        background-color: #b8daff;
    }

    .table-striped tbody tr:nth-child(6) {
        background-color: #d6d8db;
    }

    .table-striped tbody tr:nth-child(7) {
        background-color: #e2e3e5;
    }
</style>


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sipariş Geçmişim</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Toplam Fiyat</th>
                                        <th>Sipariş Tarihi</th>
                                        <th>Sipariş Detayları</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;

                                        @*  
                                        if (count == 1) { tableRowColor = "table-info"; }
                                        if (count == 2) { tableRowColor = "table-warning"; }
                                        if (count == 3) { tableRowColor = "table-danger"; }
                                        if (count == 4) { tableRowColor = "table-success"; }
                                        if (count == 5) { tableRowColor = "table-primary"; }
                                        if (count == 6) { tableRowColor = "table-dark"; }
                                        if (count == 7) { tableRowColor = "table-secondary"; }
                                        <tr class="@tableRowColor"> 
                                        *@

                                        <tr>
                                            <th>@count</th>
                                            <td>@item.OrderId</td>
                                            <td>@item.TotalPrice</td>
                                            <td>@(((DateTime)item.OrderDate).ToString("dd-MMM-yyyy"))</td>
                                            <td><a href="#" class="btn btn-primary">Sipariş Detayları</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>